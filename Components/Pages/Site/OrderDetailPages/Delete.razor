@page "/orderdetails/delete"
@using Microsoft.EntityFrameworkCore
@using AnyReservationTemp.Domain
@inject IDbContextFactory<AnyReservationTemp.Data.AnyReservationTempContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>OrderDetail</h2>
    <hr />
    @if (orderdetail is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Quantity</dt>
            <dd class="col-sm-10">@orderdetail.Quantity</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">OrderId</dt>
            <dd class="col-sm-10">@orderdetail.OrderId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ProductId</dt>
            <dd class="col-sm-10">@orderdetail.ProductId</dd>
        </dl>
        <EditForm method="post" Model="orderdetail" OnValidSubmit="DeleteOrderDetail" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(orderdetail is null)">Yes</button>
        </EditForm>
        <button href="@($"orders/edit?id={OrderId}")">Cancel</button>
    }
</div>

@code {
    private OrderDetail? orderdetail;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromQuery]
    private int OrderId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        orderdetail = await context.OrderDetail.FirstOrDefaultAsync(m => m.Id == Id);

        if (orderdetail is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteOrderDetail()
    {
        using var context = DbFactory.CreateDbContext();
        context.OrderDetail.Remove(orderdetail!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo($"/orders/edit?id={OrderId}");
    }
}
