@page "/restaurantproducts/edit"
@using Microsoft.EntityFrameworkCore
@using AnyReservationTemp.Domain
@inject IDbContextFactory<AnyReservationTemp.Data.AnyReservationTempContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>RestaurantProduct</h2>
<hr />
@if (RestaurantProduct is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="RestaurantProduct" OnValidSubmit="UpdateRestaurantProduct" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="RestaurantProduct.Id" value="@RestaurantProduct.Id" />
                <div class="mb-3">
                    <label for="productid" class="form-label">ProductId:</label>
                    <InputNumber id="productid" @bind-Value="RestaurantProduct.ProductId" class="form-control" />
                    <ValidationMessage For="() => RestaurantProduct.ProductId" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="restaurantid" class="form-label">RestaurantId:</label>
                    <InputNumber id="restaurantid" @bind-Value="RestaurantProduct.RestaurantId" class="form-control" />
                    <ValidationMessage For="() => RestaurantProduct.RestaurantId" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="name" class="form-label">Name:</label>
                    <InputText id="name" @bind-Value="RestaurantProduct.Name" class="form-control" />
                    <ValidationMessage For="() => RestaurantProduct.Name" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="contact" class="form-label">Contact:</label>
                    <InputText id="contact" @bind-Value="RestaurantProduct.Contact" class="form-control" />
                    <ValidationMessage For="() => RestaurantProduct.Contact" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="emailaddress" class="form-label">EmailAddress:</label>
                    <InputText id="emailaddress" @bind-Value="RestaurantProduct.EmailAddress" class="form-control" />
                    <ValidationMessage For="() => RestaurantProduct.EmailAddress" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/restaurantproducts">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private RestaurantProduct? RestaurantProduct { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        RestaurantProduct ??= await context.RestaurantProductCategory.FirstOrDefaultAsync(m => m.Id == Id);

        if (RestaurantProduct is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateRestaurantProduct()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(RestaurantProduct!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!RestaurantProductExists(RestaurantProduct!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/restaurantproducts");
    }

    private bool RestaurantProductExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.RestaurantProductCategory.Any(e => e.Id == id);
    }
}
